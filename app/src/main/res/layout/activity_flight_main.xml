<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlightMainActivity"
    android:orientation="vertical"
    android:gravity="center" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옵션"
        android:textSize="50dp"
        android:layout_marginBottom="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/flightData"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:drawableLeft="@drawable/plane"
        android:text="항공데이터 입력하기"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button_white_border2"
        android:layout_marginBottom="30dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reservationData"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:drawableLeft="@drawable/searching"
        android:text="예약데이터 검색하기"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_white_border2" />

    <Button
        android:id="@+id/logout"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="로그아웃" />

</LinearLayout>